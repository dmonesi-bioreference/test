{
  "name": "@zolk/react-ui-starter-kit",
  "version": "0.2.29",
  "main": "dist/index.js",
  "files": [
    "dist/"
  ],
  "dependencies": {
    "husky": "^1.3.1",
    "npm": "^5.8.0",
    "polished": "^2.3.1",
    "prop-types": "^15.6.1",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "react-scripts": "1.1.5",
    "styled-components": "^4.1.3",
    "webpack": "^2.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:storybook": "build-storybook",
    "test": "react-scripts test --env=jsdom",
    "lint-js": "eslint 'src/**/*.{js,jsx}'",
    "fix-js": "eslint --fix 'src/**/*.{js,jsx}'",
    "lint-styles": "stylelint 'src/**/*.js'",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 9009",
    "plop": "plop",
    "build:components": "rm -rf dist && mkdir -p dist/components && babel -d dist src",
    "build:all": "yarn build:components",
    "release": "yarn run build:all && npm version patch && npm publish && git push && git push --tags"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "@storybook/addon-a11y": "^4.1.7",
    "@storybook/addon-actions": "^4.1.7",
    "@storybook/addon-info": "^4.1.7",
    "@storybook/addon-knobs": "^4.1.7",
    "@storybook/addon-links": "^4.1.7",
    "@storybook/addon-options": "^4.1.7",
    "@storybook/addons": "^4.1.7",
    "@storybook/react": "^4.1.7",
    "babel-loader": "^8.0.4",
    "babel-plugin-inline-react-svg": "^0.5.2",
    "babel-plugin-styled-components": "^1.10.0",
    "emotion": "^9.1.3",
    "eslint": "^5.12.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.6.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "lint-staged": "^8.1.0",
    "moment": "^2.22.2",
    "plop": "^2.0.0",
    "prettier": "^1.16.0",
    "storybook-addon-smart-knobs": "^4.1.0",
    "stylelint": "^9.9.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.5.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,jsx}": [
        "stylelint",
        "eslint --fix",
        "yarn test --bail --findRelatedTests --watchAll=false",
        "git add"
      ]
    }
  }
}
