{
  "name": "@zolk/react-ui-starter-kit",
  "version": "0.3.0",
  "private": true,
  "main": "dist/index.js",
  "files": [
    "dist/"
  ],
  "dependencies": {
    "@storybook/react": "^5.2.0",
    "husky": "^2.7.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1",
    "react-svg": "^10.0.20",
    "styled-components": "^4.3.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:storybook": "build-storybook",
    "test": "react-scripts test --env=jsdom",
    "lint-js": "eslint 'src/**/*.{js,jsx}'",
    "fix-js": "eslint --fix 'src/**/*.{js,jsx}'",
    "lint-styles": "stylelint 'src/**/*.js'",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -s ./public -p 9009",
    "plop": "plop",
    "build:components": "rm -rf dist && mkdir -p dist/components && babel -d dist src",
    "build:all": "yarn build:components"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.4.5",
    "@storybook/addon-a11y": "^5.2.0",
    "@storybook/addon-actions": "^5.2.0",
    "@storybook/addon-backgrounds": "^5.2.0",
    "@storybook/addon-docs": "^5.2.0",
    "@storybook/addon-knobs": "^5.2.0",
    "@storybook/addon-links": "^5.2.0",
    "@storybook/addon-options": "^5.2.0",
    "@storybook/addon-viewport": "^5.2.0",
    "@storybook/addons": "^5.2.0",
    "@storybook/source-loader": "^5.2.0",
    "babel-loader": "8.0.5",
    "babel-plugin-styled-components": "^1.10.4",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "lint-staged": "^8.2.1",
    "moment": "^2.24.0",
    "plop": "^2.4.0",
    "prettier": "^1.18.2",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,jsx}": [
        "stylelint",
        "eslint --fix",
        "yarn test --bail --findRelatedTests --watchAll=false",
        "git add"
      ]
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "strict": 0,
      "import/no-extraneous-dependencies": 0,
      "jsx-a11y/label-has-for": [
        2,
        {
          "components": [
            "Label"
          ],
          "required": {
            "every": [
              "nesting",
              "id"
            ]
          },
          "allowChildren": true
        }
      ],
      "jsx-a11y/label-has-associated-control": [
        "error",
        {
          "assert": "either"
        }
      ],
      "prettier/prettier": "error",
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "components": [
            "Link"
          ],
          "specialLink": [
            "hrefLeft",
            "hrefRight"
          ],
          "aspects": [
            "invalidHref",
            "preferButton"
          ]
        }
      ],
      "sort-keys": [
        "error",
        "asc",
        {
          "caseSensitive": true,
          "natural": false
        }
      ],
      "semi": [
        "error",
        "never",
        {
          "beforeStatementContinuationChars": "always"
        }
      ]
    },
    "plugins": [
      "prettier"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": false
  },
  "stylelint": {
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-styled-components"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-react"
    ],
    "plugins": [
      "babel-plugin-styled-components"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
